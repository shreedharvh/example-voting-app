pipeline {
  agent any

  tools{
    nodejs 'NodeJS 8.9.0'

  }

  stages{
      stage('build'){
          steps{
              echo 'Compiling result app..'
              dir('result'){
                sh 'npm install'
              }
          }
      }
      stage(two){
          steps{
              echo 'Running Unit Tets on result app..'
              dir('result'){
                sh 'npm test'
              }

          }
      }
      stage(three){
          steps{
              echo 'Packaging worker app'
              dir('result'){
                echo 'post test'
              }

          }
      }
  }
}
